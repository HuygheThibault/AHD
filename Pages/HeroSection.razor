<section class="hero">
    <div class="hero__image">
        <div class="bg-wrapper" aria-hidden="true">
            <picture>
                <source media="(max-width: 600px)" srcset="@img">
                <source media="(min-width: 601px)" srcset="@img">
                <img src="@img" alt="A beautiful roof">
            </picture>
        </div>
    </div>
    <div class="hero__content">
        <div class="hero__content__inner">
            <h1 class="hero__title">Engineering and Automation Excellence</h1>
            <p class="hero__description">We provide specialized engineering solutions to optimize your business.</p>
            <Button>Contact</Button>
        </div>
    </div>
</section>

